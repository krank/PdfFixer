{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "configName": {
      "description": "The name of the configuration",
      "type": "string"
    },
    "inputFileName": {
      "description": "The PDF file to read from; must be a valid PDF file.",
      "type": "string"
    },
    "outputFileName": {
      "description": "The main PDF file to write changes to; must be different from inputFileName",
      "type": "string"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string"
          }
        },
        "required": [
          "action"
        ],
        "oneOf": [
          {
            "additionalProperties": false,
            "properties": {
              "action": {
                "description": "Change metadata. Allowed properties: title, author, description, keywords",
                "const": "setMetadata"
              },
              "title": {
                "description": "The new title",
                "type": "string"
              },
              "author": {
                "description": "The new author",
                "type": "string"
              },
              "description": {
                "description": "The new description",
                "type": "string"
              },
              "keywords": {
                "description": "The new keywords",
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              }
            },
            "anyOf": [
              {
                "required": [
                  "title"
                ]
              },
              {
                "required": [
                  "author"
                ]
              },
              {
                "required": [
                  "description"
                ]
              },
              {
                "required": [
                  "keywords"
                ]
              }
            ]
          },
          {
            "additionalProperties": false,
            "properties": {
              "action": {
                "description": "Remove named layers & all their contents from all pages",
                "const": "removeLayers"
              },
              "layerNames": {
                "description": "The layers to remove",
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "layerNames"
            ]
          },
          {
            "additionalProperties": false,
            "properties": {
              "action": {
                "description": "Delete a specific page (1-based).",
                "const": "deletePage"
              },
              "pageNumber": {
                "description": "The page to delete",
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "pageNumber"
            ]
          },
          {
            "additionalProperties": false,
            "properties": {
              "action": {
                "description": "Adds a new blank page before a specified page (1-based)",
                "const": "addBlankPage"
              },
              "beforePage": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "beforePage"
            ]
          },
          {
            "unevaluatedProperties": false,
            "properties": {
              "action": {
                "description": "Copy one or more pages from another PDF and insert them before a specified page (1-based). Use either sourcePage or sourcePageFirst/sourcePageLast",
                "const": "insertFrom"
              },
              "beforePage": {
                "description": "Where in the PDF to add the new pages",
                "type": "integer",
                "minimum": 1
              },
              "sourceFile": {
                "description": "The PDF to get pages from",
                "type": "string",
                "minLength": 4
              },
              "sourcePage": {
                "description": "The page number to get from sourceFile (1-based)",
                "type": "integer",
                "minimum": 1
              },
              "sourcePageRange": {
                "description": "The pages to get from sourceFile (1-based)",
                "type": "string",
                "minLength": 1,
                "pattern": "^[0-9]+(?:-[0-9]+)?(?:,[0-9]+(?:-[0-9]+)?)*$"
              }
            },
            "required": [
              "beforePage",
              "sourceFile"
            ],
            "dependencies": {
              "sourcePage": {
                "not": {
                  "required": [
                    "sourcePageRange"
                  ]
                }
              },
              "sourcePageRange": {
                "not": {
                  "required": [
                    "sourcePage"
                  ]
                }
              }
            }
          },
          {
            "additionalProperties": false,
            "properties": {
              "action": {
                "description": "Rename a layer label. If no 'from' is specified, will rename first label found, if any",
                "const": "renameLayerLabel"
              },
              "from": {
                "description": "Current name. If empty or missing, will rename first label encountered",
                "type": "string"
              },
              "to": {
                "description": "New name",
                "type": "string"
              },
              "maxTimes": {
                "description": "The max number of labels to rename",
                "type": "integer"
              }
            },
            "required": [
              "from",
              "to"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "configName",
    "inputFileName",
    "outputFileName",
    "actions"
  ]
}